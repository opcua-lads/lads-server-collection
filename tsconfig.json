{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "esnext",
        "esModuleInterop": true,
        "lib": ["ES2022", "DOM"],
        "module": "commonjs",
        "outDir": "out",
        "moduleResolution": "node",
        "strictNullChecks": false,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@utils": ["utils/src"],
            "@interfaces": ["interfaces/src"],
            "@afo": ["lib/afo/src"],
            "@afo/*": ["lib/afo/src/*"],
            "@asm": ["lib/asm/src"],
        }
    },
}
